<!DOCTYPE html>
<html>
  <head>
    <title>#myplace</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'true' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'true' %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-dark bg-primary">
      <div class="container">
        <%= link_to "#myplace", root_path, class: "navbar-brand" %>
        <ul class="nav navbar-nav">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link btn btn-success" %></li>
          <li class="nav-item"><%= link_to "Tweets", tweets_path , class: "nav-link btn btn-success" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link btn btn-success" %></li>
          <li class="nav-item"><%= link_to "Contact", contact_path, class: "nav-link btn btn-success" %></li>
          <li class="nav-item"><%= link_to "Posts", posts_path, class: "nav-link btn btn-success" %></li>
            <div class="float-lg-right">  
              <% if user_signed_in? %>
                <li class="nav-item"><%= link_to "Log out", signout_path, method: :delete, class: "nav-link btn btn-danger" %></li>
                  <% else %>
                  <li class="nav-item"><%= link_to "Sign up", signup_path, class: "btn btn-warning" %></li>
                  <li class="nav-item"><%= link_to "Sign in", signin_path, class: "btn btn-primary" %></li>
                  <% end %>
        </ul>
      </div>
    </nav>

<!-- Flash Messages -->
<% flash.each do |name, message| %>
  <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
<% end %>

  <!-- Page Content -->
  
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2016 William</p>
        </center>
      </div>
    </footer>

  </body>
</html>
